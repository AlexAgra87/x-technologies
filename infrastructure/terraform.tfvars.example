# Production environment terraform.tfvars
# Copy to terraform.tfvars and fill in sensitive values

# General
project_name = "x-tech"
environment  = "prod"
aws_region   = "eu-west-1"
aws_profile  = "xtech"

# API Keys - Replace with actual values
syntech_api_key = "D52EA85C-4F63-430F-8341-C4D5E191C830"
rct_user_id     = ""  # Get this from RCT

# Frontend URL for CORS
frontend_url = "https://x-tech.vercel.app"

# Lambda Configuration
lambda_memory  = 512
lambda_timeout = 30

# DynamoDB
dynamodb_billing_mode = "PAY_PER_REQUEST"

# API Gateway throttling
api_throttle_rate_limit  = 100
api_throttle_burst_limit = 200
